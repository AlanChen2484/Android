<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.linearlayout">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ib_earth_normal"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LinearActivity"
            android:label="@string/linear_layout"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".RelativeActivity"
            android:label="@string/relative_layout" />
        <activity
            android:name=".GridActivity"
            android:label="@string/grid_layout" />
        <activity
            android:name=".DrawerActivity"
            android:label="@string/drawer_layout" />
        <activity
            android:name=".SlidingPaneActivity"
            android:label="@string/sliding_layout" />
        <activity
            android:name=".ViewPagingActivity"
            android:label="@string/paging_layout" />

    </application>

</manifest>